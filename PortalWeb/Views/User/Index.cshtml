@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="newApp">
<head>
    <meta charset="utf-8">

    <title>ACCESO DE USUARIOS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">
        window.alert = function () { };
        var defaultCSS = document.getElementById('bootstrap-css');
        function changeCSS(css) {
            if (css) $('head > link').filter(':first').replaceWith('<link rel="stylesheet" href="' + css + '" type="text/css" />');
            else $('head > link').filter(':first').replaceWith(defaultCSS);
        };
    </script>
</head>
<body ng-controller="UserController">
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/fonts/Img/userlogin.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" name="FrmLoginUsuario" id="FrmLoginUsuario">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="text" ng-model="inputUsuario" id="inputUsuario" name="inputUsuario" class="form-control" placeholder="Usuario" required autofocus>
                <input type="password" ng-model="inputPassword" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Recordarme
                    </label>
                </div>
                @*<button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Ingresar</button>*@
                <button ng-click="FnIngresar()" type="button" class="btn btn-primary">Aceptar</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Olvido la Contraseña?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/MyScripts/services/UserService.js"></script>
    <script src="~/Scripts/MyScripts/controllers/UserController.js"></script>
    <script src="~/Scripts/MyScripts/newApp.js"></script>

</body>
</html>
